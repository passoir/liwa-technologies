<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	      version="1.2">
  <application>
    <default-render-kit-id>org.apache.myfaces.trinidad.core</default-render-kit-id>
  </application>
  <managed-bean>
    <managed-bean-name>sessionHandler</managed-bean-name>
    <managed-bean-class>de.l3s.liwa.assessment.SessionHandler</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <navigation-rule>
    <display-name>login</display-name>
    <from-view-id>/pages/login.jsp</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/pages/assessment.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>login</display-name>
    <from-view-id>/pages/login.jsp</from-view-id>
    <navigation-case>
      <from-outcome>failure</from-outcome>
      <to-view-id>/pages/login.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <display-name>*</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>go_logout</from-outcome>
      <to-view-id>/pages/login.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>*</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>go_privacy</from-outcome>
      <to-view-id>/pages/privacy.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>*</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>go_help</from-outcome>
      <to-view-id>/pages/help.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>*</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>go_assessment</from-outcome>
      <to-view-id>/pages/assessment.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <display-name>*</display-name>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>go_hostsEmpty</from-outcome>
      <to-view-id>/pages/hostsEmpty.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
</faces-config>
