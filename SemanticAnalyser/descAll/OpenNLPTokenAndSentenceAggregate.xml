<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>false</primitive>
  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="OpenNLPSentenceDetector">
      <import location="OpenNLPSentenceDetector.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="OpenNLPTokenizer">
      <import location="OpenNLPTokenizer.xml"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>
  <analysisEngineMetaData>
    <name>OpenNLPTokenAndSentenceAggregate</name>
    <description>Aggregate analysis engine that performs sentence detection and tokenization using the OpenNLP sentence detector and tokenizer.</description>
    <version>1.0</version>
    <vendor>The Apache Software Foundation</vendor>
    <configurationParameters searchStrategy="language_fallback">
      <configurationParameter>
        <name>SentenceDetectorModelFile</name>
        <description>Filename of the Sentence Detector model file.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>OpenNLPSentenceDetector/ModelFile</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>TokenizerModelFile</name>
        <description>Filename of the Tokenizer model file.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
        <overrides>
          <parameter>OpenNLPTokenizer/ModelFile</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>SentenceDetectorModelFile</name>
        <value>
          <string>data/models_english/sentdetect/EnglishSD.bin.gz</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>TokenizerModelFile</name>
        <value>
          <string>data/models_english/tokenize/EnglishTok.bin.gz</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <flowConstraints>
      <fixedFlow>
        <node>OpenNLPSentenceDetector</node>
        <node>OpenNLPTokenizer</node>
      </fixedFlow>
    </flowConstraints>
    <capabilities>
      <capability>
        <inputs/>
        <outputs>
          <type>org.apache.uima.examples.opennlp.Token</type>
          <type>org.apache.uima.examples.opennlp.Sentence</type>
        </outputs>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration/>
</analysisEngineDescription>
